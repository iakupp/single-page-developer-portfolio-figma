---
import "../style/style.css";
---
<div class="container">
  <div class="top">
    <h2 class="logo">iakupmajercik</h2>
    <ul class="socials">
      <li><a href="https://github.com/iakupp?tab=repositories"><i class="fa-brands fa-github"></i></a></li>
      <li><a href="https://www.instagram.com/jakup_majercik/"><i class="fa-brands fa-instagram"></i></a></li>
      <li><a href="#"><i class="fa-brands fa-linkedin"></i></a></li>
      <li><a href="https://twitter.com/jakub_majercik"><i class="fa-brands fa-twitter"></i></a></li>
    </ul>
  </div>
  <img src="/images/avatar.png" alt="portait" class="avatar">
  <div class="box">
    <img src="../../images/ovals.png" class="oval" alt="picture of oval">
  </div>
  <div class="circle">
    <img src="../../images/circle.png" alt="circle">
  </div>
</div>



<style>
  .container{
    width: 174px;
    height: 383px;
    background: linear-gradient(180deg, rgba(36, 36, 36, 0.00) 0%, #242424 100%);
  }
  .top{
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 20px;
  }
  .avatar{
    margin-top: 30px;
    z-index: 100;
  }

  .logo{
    color: var(--white-color);
    text-align: center;
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: 32px; /* 133.333% */
    letter-spacing: -0.333px;
    margin-top: 20px;
  }
  ul{
    display: flex;
    justify-content: space-evenly;
    padding: 0;
    margin: 20px 0 0 0;
  }
  li{
    cursor: pointer;
    height: 19.2px;
    width: 19.2px;
    color: var(--white-color);
  }
  i:hover{
    color: var(--green-color);
  }
  .box{
    position: absolute;
    z-index:-100;
    left: 0;
    top: 125px;
    height: 129px;
  }
  .circle{
    position: absolute;
    z-index:-100;
    right: 0;
    top: 254px;
  }

</style>