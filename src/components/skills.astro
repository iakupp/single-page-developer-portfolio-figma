---
import "../style/style.css";
const allSkills = await Astro.glob("../content/skill/*.md");
---

<div class="container">
    <div class="line top"></div>
    <div class="skills">
            {
                allSkills.map(skill =>(
                    <div class="skill">
                        <h2>{skill.frontmatter.skill}</h2>
                        <p>{skill.frontmatter.experience}</p>
                    </div>
                ))
            }
    </div>
    <div class="line bottom"></div>
    <div class="box">
        <img src="/images/ovals.png" class="oval" alt="picture of oval">
        <img src="/images/Group 26.png" class="oval_desktop" alt="picture of oval">
    </div>
</div>



<style>
    .container{
        position: relative;
    }
    .oval_desktop{
        display: none;
    }
    .line{
        margin-top: 80px;
        width: 88%;
        height: 1px;
        margin-inline: auto;
        background-color: var(--white-color, #fff);
    }
    .top{
        margin-top: 80px;
    }
    .bottom{
        margin: 40px 0 80px 0;
        position: relative;
    }
    h2{
        color: var(--white-color, #FFF);
        font-size: 32px;
        font-style: normal;
        font-weight: 700;
        line-height: 40px; /* 125% */
        letter-spacing: -1px;
    }
    p{
        color: var(--grey, #D9D9D9);
        font-style: normal;
        font-weight: 500;
        line-height: 26px; /* 162.5% */
        margin-bottom: 24px;
    }
    .box{
        position: absolute;
        rotate: 180deg;
        height: 129px;
        z-index:-100;
        bottom: -64px;
        right: 0;
    }


    @media screen and (min-width: 766px){
        .skills{
            display: grid;
            grid-template-columns: 1fr 1fr ;
            text-align: left;
            width: 708.49px;
            margin: 0 auto 80px auto ;
        }
        .line{
            width: 706px;
        }
        .bottom{
            display: none;
        }
        h2{
            font-size: 48px;
            font-style: normal;
            font-weight: 700;
            line-height: 56px; /* 116.667% */
            letter-spacing: -1.5px;
            margin-top: 52px !important;
        }
        p{
            font-size: 18px;
            font-style: normal;
            font-weight: 500;
            line-height: 28px;
            margin: 14px 0 52px 0 ;
        }
        .box{
            bottom: -12px;
        }
    }


    /*  Media queries desktop    */

    @media screen and (min-width: 1440px){
        .line{
            width: 1110px;
        }
        .skills{
            grid-template-columns: 1fr 1fr 1fr;
            width: 1110px;
        }
        .oval{
            display: none;
        }
        .oval_desktop{
            display: block;
        }
    }
</style>