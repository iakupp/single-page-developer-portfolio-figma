---
import "../style/style.css";
---

<div class="container">
    <div class="line top"></div>
    <div class="skills">
        <div class="html">
            <h2>HTML</h2>
            <p>2 Years Experience</p>
        </div>
        <div class="css">
            <h2>CSS</h2>
            <p>2 Years Experience</p>
        </div>
        <div class="javascript">
            <h2>Javascript</h2>
            <p>2 Years Experience</p>
        </div>
        <div class="accessibility">
            <h2>Accessibility</h2>
            <p>2 Years Experience</p>
        </div>
        <div class="react">
            <h2>React</h2>
            <p>1 Years Experience</p>
        </div>
        <div class="sass">
            <h2>Sass</h2>
            <p>2 Years Experience</p>
        </div>
    </div>
    <div class="line bottom"></div>
    <div class="box">
        <img src="../../images/ovals.png" class="oval" alt="picture of oval">
    </div>
</div>





<style>
    .container{
        position: relative;
    }
    .line{
        margin-top: 80px;
        width: 88%;
        height: 1px;
        margin-inline: auto;
        background-color: var(--white-color, #fff);
    }
    .top{
        margin-top: 80px;
    }
    .bottom{
        margin-top: 40px;
        margin-bottom: 80px;
        position: relative;
    }
    h2{
        color: var(--white-color, #FFF);
        font-size: 32px;
        font-style: normal;
        font-weight: 700;
        line-height: 40px; /* 125% */
        letter-spacing: -1px;
    }
    h2:first-of-type{
        margin-top: 40px;
    }
    p{
        color: var(--grey, #D9D9D9);
        font-style: normal;
        font-weight: 500;
        line-height: 26px; /* 162.5% */
        margin-bottom: 24px;
    }
    .box{
        position: absolute;
        rotate: 180deg;
        height: 129px;
        z-index:-100;
        bottom: -64px;
        right: 0;
    }
</style>