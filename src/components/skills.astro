---
import "../style/style.css";
const allSkills = await Astro.glob("../content/skill/*.md");
---

<div class="container">
    <div class="line top"></div>
    <div class="skills">
    {
        allSkills.map(skill =>(
            <h2>{skill.frontmatter.skill}</h2>
            <p>{skill.frontmatter.experience}</p>
        ))
    }
    </div>
    <div class="line bottom"></div>
    <div class="box">
        <img src="../../images/ovals.png" class="oval" alt="picture of oval">
    </div>
</div>



<style>
    .container{
        position: relative;
    }
    .line{
        margin-top: 80px;
        width: 88%;
        height: 1px;
        margin-inline: auto;
        background-color: var(--white-color, #fff);
    }
    .top{
        margin-top: 80px;
    }
    .bottom{
        margin-top: 40px;
        margin-bottom: 80px;
        position: relative;
    }
    h2{
        color: var(--white-color, #FFF);
        font-size: 32px;
        font-style: normal;
        font-weight: 700;
        line-height: 40px; /* 125% */
        letter-spacing: -1px;
    }
    h2:first-of-type{
        margin-top: 40px;
    }
    p{
        color: var(--grey, #D9D9D9);
        font-style: normal;
        font-weight: 500;
        line-height: 26px; /* 162.5% */
        margin-bottom: 24px;
    }
    .box{
        position: absolute;
        rotate: 180deg;
        height: 129px;
        z-index:-100;
        bottom: -64px;
        right: 0;
    }
</style>